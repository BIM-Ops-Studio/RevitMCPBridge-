{
  "$schema": "standards-pack-v1",
  "name": "ARKY_Multifamily_v1",
  "description": "ARKY standards for multi-family residential (3+ stories)",
  "version": "1.0.0",
  "firm": "ARKY",
  "projectType": "Multifamily",

  "titleBlock": {
    "preferredPatterns": ["ARKY", "E1 30 x 42"],
    "excludePatterns": ["11 x 17", "8.5 x 11"],
    "fallbackSize": "30x42"
  },

  "sheetSize": {
    "width": 42,
    "height": 30,
    "units": "inches"
  },

  "scales": {
    "floorPlan": 96,
    "ceilingPlan": 96,
    "elevation": 96,
    "section": 48,
    "detail": 12,
    "unitPlan": 48
  },

  "cropStrategy": {
    "method": "model_extents",
    "marginFeet": 10.0,
    "enabled": true
  },

  "sheetSet": {
    "permitSkeleton": [
      {"number": "G0.01", "name": "COVER SHEET"},
      {"number": "G0.02", "name": "CODE ANALYSIS"},
      {"number": "A1.0.1", "name": "OVERALL FLOOR PLAN - LEVEL 1", "viewType": "FloorPlan", "level": 1},
      {"number": "A1.0.2", "name": "OVERALL FLOOR PLAN - LEVEL 2", "viewType": "FloorPlan", "level": 2},
      {"number": "A1.0.3", "name": "OVERALL FLOOR PLAN - LEVEL 3", "viewType": "FloorPlan", "level": 3},
      {"number": "A2.0.1", "name": "BUILDING ELEVATIONS", "viewType": "Elevation"},
      {"number": "A3.0.1", "name": "BUILDING SECTIONS", "viewType": "Section"},
      {"number": "A5.0.1", "name": "DOOR SCHEDULE", "viewType": "Schedule", "category": "Doors"},
      {"number": "A5.0.2", "name": "WINDOW SCHEDULE", "viewType": "Schedule", "category": "Windows"}
    ]
  },

  "naming": {
    "viewPrefix": "ZZ_",
    "schedulePattern": "{Category} Schedule",
    "sheetNumberFormat": "dot-category",
    "sheetNumberSuffix": "-{run_id:4}"
  },

  "levelMapping": {
    "patterns": {
      "level1": ["Level 1", "L1", "Ground", "Podium"],
      "level2": ["Level 2", "L2"],
      "level3": ["Level 3", "L3"],
      "level4": ["Level 4", "L4"],
      "level5": ["Level 5", "L5"],
      "roof": ["Roof", "T.O. Roof", "Roof Deck"]
    },
    "dynamicLevels": true,
    "maxLevels": 10
  },

  "capabilities": {
    "fallbacks": {
      "scheduleViewport": "export_csv",
      "legendViewport": "skip_with_warning",
      "missingElevation": "create_4_cardinal"
    }
  }
}
